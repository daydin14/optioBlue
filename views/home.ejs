<style>
  .dropdown {
    display: flex;
    justify-content: center;
    border-radius: 20px;
  }
  .menu {
    display: block;
    min-width: 300px;
    width: 100%;
    border: none;
    background-color: darkgray;
    color: whitesmoke;
    padding: 5px 28px;
    font-size: 48px;
    cursor: pointer;
    text-align: center;
    border-radius: 20px;
  }
  .menuLinks {
    display: none;
    position: fixed;
    background-color: darkgray;
    min-width: 300px;
    width: 100%;
    font-size: 32px;
