<%- include ("../partials/head") %>
<section>
  <h2>Current Order Details:</h2>
  <ul>
    <li>Clothing: <%=order.clothing%></li>
    <li>Qty: <%=order.qty%></li>
    <li>Price: <%=order.price%></li>
  </ul>
</section>
<button class="showbtn"><a href="/order/<%=order._id%>">Back to Order details</a></button>
<button class="allOrders"><a href="/order">Back to All Orders</a></button>
<section class="newOrder">
  <form action="/order/<%=order._id%>?_method=PUT" method="POST">
    <p>Clothing:</p>
    <input type="text" name="clothing" /> <br />
    <p>Quantity:</p>
    <input type="text" name="qty" /> <br />
    <p>Price:</p>
    <input type="text" name="price" /> <br /> <br />
    <input type="submit" class="editbtn" value="Make These Changes" />
    <br>
  </form>
</section>

<%- include ("../partials/footer") %>
