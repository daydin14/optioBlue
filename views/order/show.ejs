<%- include ("../partials/head") %>

<section>
  <h2>Order Attributes:</h2>
  <ul>
    <li>Clothing: <%=order.clothing%></li>
    <li>Qty: <%=order.qty%></li>
    <li>Price: <%=order.price%></li>
  </ul>
</section>

<section>
  <button class="editbtn"><a href="/order/<%=order._id%>/edit">Edit Order Details</a></button>
  <form action="/order/<%= order._id%>?_method=DELETE" method="POST">
    <input type="submit" class="deletebtn" value="Delete Order" />
  </form>
  <button class="allOrders"><a href="/order">Back to All Orders</a></button>
</section>
<%- include ("../partials/footer") %>
