<style>
    .container {
        width: 80vw;
        height: 70vw;
        margin: 50px auto;
        display: flex;
        border-radius: 10px;
        box-shadow: 1px 1px 10px gray, -1px -1px 10px gray, 1px -1px 10px gray, -1px 1px 10px gray;
    }
    .sidebar {
        width: 50%;
        border-radius: 0 10px 10px 0;
        background: url("https://images.unsplash.com/photo-1587145820137-a9dbc8c5ed99?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=880&q=80");
        background-position: 45%;
    }
    .registration {
        width: 50%;
        border-radius: 0 10px 10px 0;
        padding: 15px;
        box-sizing: border-box;
        overflow: auto;
    }
    fieldset {
        border: 1px solid gray;
        border-radius: 5px;
        padding: 20px;
        margin: 20px 0;
    }
    legend {
        font-weight: 200;
        display: block;
    }
    input {
        width: 100%;
        margin: 10px 0;
        padding: 10px;
        box-sizing: border-box;
        border: 1px solid gray;
    }
    textarea {
        width: 200px;
        height: 100px;
        resize: none;
    }
    textarea {
        width: 200px;
        height: 100px;
        max-width: 400px;
        max-height: 150px;
    }
    textarea {
        resize: none;
        height: 75px;
    }
</style>

<h1>Contact Us</h1>
<button><a href="/">Home</a></button>
<div class="container">
    <div class="sidebar"></div>
    <div class="registration">
        <h1>Contact Us</h1>
        <form action="/thankyou">
            <fieldset class="account-info">
                <legend>Personal Information</legend>

                <label for="fullName">Full Name</label>
                <input type="text" id="fullName">

                <label for="phoneNumber">Phone Number</label>
                <input type="phoneNumber" id="phoneNumber">

                <label for="email">E-MAIL</label>
                <input type="email" id="email">
            </fieldset>

            <fieldset class="message">
                <legend>Your Message</legend>
                <textarea 
                    id="message" 
                    placeholder="Tell us about your recent transcation and customer service. "
                ></textarea>
            </fieldset>
            <input type="submit" value="Send">
        </form>
    </div>
</div>
