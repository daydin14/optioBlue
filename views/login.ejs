<div class="options">
    <% function email() {  %>
        <p>Email</p>
        <input type="text" name="email" placeholder="e-mail"> <br>
        <input type="password" name="password" placeholder="password"> <br>  
    <% }; %>

    <% function phone() {  %>
        <h1>phone</h1>
        <input type="text" name="phone" placeholder="phone #"> <br>
        <input type="password" name="password" placeholder="password"> <br>  
    <% }; %>

    <button onclick="email()" id="email">Sign in with E-Mail</button><br>
    <button onclick="phone()" id="phone">Sign in with Phone #</button><br>
    <button><a href="/signup">Sign Up</a></button><br>

</div>
<script>
    $("#email").click(function () {
        $("#email").append(
            `<form action="/loggedin?_method=PUT" method="POST">
                <input type="text" name="email" placeholder="E-Mail"><br>
                <input type="password" name="password" placeholder="password"><br>
                <input type="submit" name="" value="Sign In" />
            </form>`
        );
    });
</script>
